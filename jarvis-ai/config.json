{
  "voice": {
    "wake_word": "jarvis",
    "default_voice": "aria",
    "stt_model": "small",
    "tts_speed": 1.0,
    "listen_timeout": 5.0
  },
  "llm": {
    "model": "phi3:mini",
    "temperature": 0.7,
    "max_tokens": 500,
    "timeout": 30.0
