  "confidence": {
    "execute_threshold": 0.85,
    "confirm_threshold": 0.60,
    "risk_weights": {
      "low": 1.0,
      "medium": 0.85,
      "high": 0.70
    }
  },
  "data_dir": "./storage",
  "log_file": "./storage/jarvis.log",
  "debug_mode": false,
  "enable_screen_monitoring": true,
  "enable_emotion_detection": false
}
